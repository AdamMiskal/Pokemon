@model Pokemon.Models.ApplicationUser
@using Microsoft.AspNet.Identity;
@using Pokemon.Models;
@using System.Data.Entity;


<h1>EDIT Profile</h1>

<div class="rn-breadcrumb-inner ptb--30">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 col-12">
                <h5 class="title text-center text-md-start">Edit Profile</h5>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <ul class="breadcrumb-list">
                    <li class="item"><a href="@Url.Action("Index","MyCollection")">My Collection</a></li>
                    <li class="separator"><i class="feather-chevron-right"></i></li>
                    <li class="item current">Edit Profile</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="edit-profile-area rn-section-gapTop">
    <div class="container">

        <div class="row plr--70 padding-control-edit-wrapper pl_md--0 pr_md--0 pl_sm--0 pr_sm--0">
            <div class="col-12 d-flex justify-content-between mb--30 align-items-center">
                <h4 class="title-left">Edit Your Profile</h4>
                @*<a href="@Url.Action("Index","MyCollection")" class="btn btn-primary ml--10"><i class="feather-eye mr--5"></i> Preview</a>*@
            </div>
        </div>
        <div class="row plr--70 padding-control-edit-wrapper pl_md--0 pr_md--0 pl_sm--0 pr_sm--0">
            <div class="col-lg-3 col-md-3 col-sm-12">
                <!-- Start tabs area -->
                <nav class="left-nav rbt-sticky-top-adjust-five">
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true"><i class="feather-edit"></i>Edit Profile Image</button>
                        <button class="nav-link" id="nav-home-tabs" data-bs-toggle="tab" data-bs-target="#nav-homes" type="button" role="tab" aria-controls="nav-homes" aria-selected="false"><i class="feather-user"></i>Personal Information</button>
                        <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false"> <i class="feather-unlock"></i>Change Password</button>
                    </div>
                </nav>
                <!-- End tabs area -->
            </div>
            <div class="col-lg-9 col-md-9 col-sm-12 mt_sm--30">
                <div class="tab-content tab-content-edit-wrapepr" id="nav-tabContent">
                    <!-- sigle tab content -->
                    <div class="tab-pane fade show active" id="nav-home" aria-labelledby="nav-home-tab">
                        <!-- start personal information -->
                        <div class="nuron-information">

                            <div class="profile-change col col-12  row g-5">
                                <div style="border-right: none; display: flex; justify-content: space-evenly" class="profile-left">
                                    <div class="profile-image mb--30">
                                        <h6 class="title">Change Your Profile Picture</h6>
                                        <img id="rbtinput1" src="~/Assets/Images/001.png" alt="Profile-NFT">
                                    </div>

                                    <form action=@Url.Action("Edit","EditProfile") method="post" style="display:flex; flex-direction:column">

                                        <div class="button-area" style="margin-top:20px">
                                            <div class="input">
                                                <input title="" name="fatima" id="fatima" type="file" value="" style="width: 400px;align-content:center;padding-left:100px" />
                                            </div>
                                        </div>
                                        <!-- <a href="#" class="btn-primary-alta btn" onclick="customAlert.alert('Confirm to Delete Your Profile Picture?')">Delete</a> -->

                                        <div class="button-area" style="margin-top:20px">
                                            <div class="input">
                                                <!-- actual upload which is hidden -->
                                                <input class="btn btn-primary" name="fatima" id="fatima" type="submit" value="Save Changes" style="width: 400px">
                                            </div>
                                            <!-- <a href="#" class="btn-primary-alta btn" onclick="customAlert.alert('Confirm to Delete Your Profile Picture?')">Delete</a> -->
                                        </div>
                                    </form>
                                </div>


                            </div>
                        </div>
                        <!-- End personal information -->
                    </div>
                    <!-- End single tabv content -->
                    <!-- sigle tab content -->
                    <div class="tab-pane fade" id="nav-homes" role="tabpanel" aria-labelledby="nav-home-tab">
                        <!-- start personal information -->
                        <div class="nuron-information">

                            <div class="profile-form-wrapper">
                                <div class="input-two-wrapper mb--15">
                                    <div class="first-name half-wid">
                                        <label for="contact-name" class="form-label">First Name</label>
                                        <input name="contact-name" id="contact-name" type="text" value="Mr." disabled>
                                    </div>
                                    <div class="last-name half-wid">
                                        <label for="contact-name-last" class="form-label">Last Name</label>
                                        <input name="contact-name" id="contact-name-last" type="text" value="Sunayra" disabled>
                                    </div>
                                </div>
                                <div class="email-area">
                                    <label for="Email" class="form-label">Edit Your Email</label>
                                    <input name="email" id="Email" type="email" value="@Model.Email" disabled>
                                </div>
                            </div>


                            <!-- edit bio area Start-->
                            <div class="edit-bio-area mt--30">
                                <label for="Discription" class="form-label">Edit Your Bio</label>
                                <textarea id="Discription" disabled>Hello, I am Alamin, A Front-end Developer...</textarea>
                            </div>
                            <!-- edit bio area End -->
                            <!--  -->
                            <div style="display:flex; justify-content:space-evenly" class="input-two-wrapper mt--15">
                                <!-- select gender -->
                                <div style="margin-right: 26px" class="half-wid currency">
                                    <select class="profile-edit-select" disabled>
                                        <option selected>Select Your Gender</option>
                                        <option value="1">Male</option>
                                        <option value="2">Female</option>
                                        <option value="3">Third Gender</option>
                                    </select>
                                </div>
                                <!-- end gender -->
                                <!-- select gender -->
                                <div style="margin-right: 2px; margin-left: 3px" class="half-wid currency">
                                    <select class="profile-edit-select" disabled>
                                        <option selected>Location</option>
                                        <option value="1">United State</option>
                                        <option value="2">Katar</option>
                                        <option value="3">Canada</option>
                                    </select>
                                </div>
                                <!-- end gender -->

                            </div>

                            <div class="input-two-wrapper mt--15">
                                <div class="half-wid currency">
                                    <!-- select gender -->
                                    <select class="profile-edit-select" disabled>
                                        <option selected>Currency</option>
                                        <option value="1">($)USD</option>
                                        <option value="2">wETH</option>
                                        <option value="3">BIT Coin</option>
                                    </select>
                                    <!-- end gender -->
                                </div>
                                <div style="margin-top:5px" class="half-wid phone-number">

                                    <label for="PhoneNumber" class="form-label"></label>
                                    <input name="contact-name" id="PhoneNumber" type="text" value="Country Calling Code + Phone Number" disabled>
                                </div>
                            </div>

                            <div class="button-area save-btn-edit">
                                @*<a href="#" class="btn btn-primary-alta mr--15" onclick="customAlert.alert('Cancel Edit Profile?')">Cancel</a>*@
                                <a href="#" class="btn btn-primary" onclick="customAlert.alert('Successfully Saved Your Profile?')">Save</a>
                            </div>

                        </div>
                        <!-- End personal information -->
                    </div>
                    <!-- End single tabv content -->

                    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                        <!-- change password area Start -->
                        <div class="nuron-information">
                            <div class="condition">
                                <h5 class="title">Create Your Password</h5>
                                <p class="condition">
                                    Passwords are a critical part of information and network security. Passwords
                                    serve to protect user accounts but a poorly chosen password, if compromised,
                                    could put the entire network at risk.
                                </p>
                                <hr />

                            </div>
                            <div class="input-two-wrapper mt--15">
                                <div class="old-password half-wid">
                                    <label for="oldPass" class="form-label">Enter Old Password</label>
                                    <input name="pass" id="oldPass" type="password" disabled>
                                </div>
                                <div class="new-password half-wid">
                                    <label for="NewPass" class="form-label">Create New Password</label>
                                    <input name="password" id="NewPass" type="password" disabled>
                                </div>
                            </div>
                            <div class="email-area mt--15">
                                <label for="rePass" class="form-label">Confirm Password</label>
                                <input name="Password" id="rePass" type="password" value="" disabled>
                            </div>
                            <a href="#" class="btn btn-primary save-btn-edit" onclick="customAlert.alert('Successfully Changed Password?')">Save</a>
                        </div>
                        <!-- change password area ENd -->
                    </div>
                </div>

            </div>


        </div>

    </div>
</div>