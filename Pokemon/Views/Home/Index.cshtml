<style>

    #vid {
        position: relative;
        background-color: black;
        height: 75vh;
        min-height: 25rem;
        width: 100%;
        overflow: hidden;
    }

        #vid video {
            position: absolute;
            top: 50%;
            left: 50%;
            min-width: 100%;
            min-height: 100%;
            width: auto;
            height: auto;
            z-index: 0;
            -ms-transform: translateX(-50%) translateY(-50%);
            -moz-transform: translateX(-50%) translateY(-50%);
            -webkit-transform: translateX(-50%) translateY(-50%);
            transform: translateX(-50%) translateY(-50%);
        }





    #list-item-3 .container .row .col-12 .grid-metro4 .grid-metro-item .product-style-one .bid-react-area {
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
    }

        #list-item-3 .container .row .col-12 .grid-metro4 .grid-metro-item .product-style-one .bid-react-area .last-bid {
            display: flex;
            justify-content: space-between;
        }

        #list-item-3 .container .row .col-12 .grid-metro4 .grid-metro-item .product-style-one .bid-react-area .react-area {
            display: flex;
            justify-content: right;
            background-color: transparent;
            color: grey;
            margin: 0px;
            padding: 0px;
        }

        #list-item-3 .container .row .col-12 .grid-metro4 .grid-metro-item .product-style-one .bid-react-area .last-bid {
            border: dashed 1px;
            margin: 2px;
            border-radius: 4px;
            padding: 3px;
        }

    #vid {
        position: relative;
    }

        #vid video {
            position: relative;
            z-index: 0;
        }

    .overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        z-index: 1;
    }
</style>


