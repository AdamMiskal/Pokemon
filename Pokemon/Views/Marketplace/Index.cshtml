@model IEnumerable<Pokemon.Models.Card>
@{

    ViewBag.Title = "Index";
}
@using Microsoft.AspNet.Identity


@foreach (var item in Model)
{
    if (User.Identity.GetUserId() == item.ApplicationUserId)
    {
        <img src=@item.Image.Url />
    }



}


<style>
    th {
        cursor: pointer;
    }

    .modal {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 1; /* Sit on top */
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
    }

    /* Modal Content/Box */
    .modal-content {
        background-image: url('https://www.teahub.io/photos/full/16-165638_cool-dark-pokemon-backgrounds.jpg');
        background-repeat: no-repeat;
        background-position: center;
        margin: 15% auto; /* 15% from the top and centered */
        padding: 20px;
        border: 1px solid #888;
        width: 80%; /* Could be more or less, depending on screen size */
    }

    /* The Close Button */
    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
</style>

<h2>Marketplace Works</h2>



<!-- end page title area -->
<!-- Start product area -->
<div class="rn-product-area rn-section-gapTop">
    <div class="container">
        <div class="row mb--50 ">
            <div class="col-lg-6 col-md-6 col-sm-6 col-12">
                <h3 class="title mb--0">Pokemon Marketplace</h3>

            </div>

        </div>




        <div>
            <div>
                <div>
                    <button id="myBtn" class="btn btn-primary" style="margin-top:20px">List Your PokemonCard</button>
                </div>
            </div>


            <!-- The Modal -->
            <div id="myModal" class="modal">

                <!-- Modal content -->
                <div class="modal-content">
                    <span class="close top-right">&times;</span>
                    <br />
                    <h2 style="color:white;">List Your Card in Marketplace</h2>
                   
                   
                        <table  class="table upcoming-projects">
                            <thead>
                                <tr>

                                    <th>
                                        <span>Pokemon</span>
                                    </th>
                                    <th>
                                        <span>Type</span>
                                    </th>
                                    <th>
                                        <span>Rarity</span>
                                    </th>
                                    <th>
                                        <span>Id</span>
                                    </th>

                                    <th>
                                        <span>Serial Number</span>
                                    </th>
                                </tr>
                            </thead>

                            <tbody id="myTable" class="ranking">


                                @foreach (var card in Model)
                                {

                                    if (card.Market == false && User.Identity.GetUserId() == card.ApplicationUserId)
                                    {
                                        <tr class="color-light">
                                            <td>
                                                <div class="product-wrapper d-flex align-items-center">
                                                    <a href="product-details.html" class="thumbnail">

